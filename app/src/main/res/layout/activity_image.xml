<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageActivity.ImageActivity">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/infoButton"
        android:focusable="true"
        android:clickable="true"
        app:cardCornerRadius="40dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/gray"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" >
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/info"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/shareButton"
        android:focusable="true"
        android:clickable="true"
        app:cardCornerRadius="40dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/infoButton"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        app:cardBackgroundColor="@color/gray"
        tools:ignore="MissingConstraints" >
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/share"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/backButton"
        android:focusable="true"
        android:clickable="true"
        app:cardCornerRadius="40dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/gray"
        tools:ignore="MissingConstraints" >
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/back"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:visibility="invisible"
        android:id="@+id/info_close"
        android:focusable="true"
        android:clickable="true"
        app:cardCornerRadius="40dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@color/gray"
        tools:ignore="MissingConstraints" >
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/close"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imagesView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="visible"
        android:id="@+id/bottom_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            app:layout_constraintRight_toLeftOf="@+id/log_out"
            android:id="@+id/instalButton"
            android:focusable="true"
            android:clickable="true"
            app:cardCornerRadius="60dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="30dp"
            app:cardBackgroundColor="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="MissingConstraints" >
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/download"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            app:layout_constraintRight_toLeftOf="@+id/starButton"
            android:id="@+id/log_out"
            android:focusable="true"
            android:clickable="true"
            app:cardCornerRadius="60dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/instalButton"
            android:layout_marginBottom="30dp"
            app:cardBackgroundColor="@color/gray"
            tools:ignore="MissingConstraints" >
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/log_out"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            app:layout_constraintRight_toLeftOf="@+id/likeButton"
            android:id="@+id/starButton"
            android:focusable="true"
            android:clickable="true"
            app:cardCornerRadius="60dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/log_out"
            android:layout_marginBottom="30dp"
            app:cardBackgroundColor="@color/gray"
            tools:ignore="MissingConstraints" >
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/star"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/likeButton"
            android:focusable="true"
            android:clickable="true"
            app:cardCornerRadius="60dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/starButton"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="30dp"
            app:cardBackgroundColor="@color/gray"
            tools:ignore="MissingConstraints" >
            <ImageView
                android:id="@+id/likedImage"
                android:layout_gravity="center"
                android:src="@drawable/default_like"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:visibility="invisible"
        android:background="@drawable/info_image"
        android:alpha="0.8"
        android:id="@+id/infoImageCard"
        android:gravity="center_vertical"
        android:paddingStart="30sp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="300dp"
        tools:ignore="MissingConstraints"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/website"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            android:text="Website: Unsplash.com/afjru"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20sp"

            android:layout_marginBottom="20dp"
            android:id="@+id/autor"
            android:text="Author: Anton Makareno"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20sp"
            android:id="@+id/download"

            android:layout_marginBottom="20dp"
            android:text="Download: 1234441"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20sp"
            android:id="@+id/size"
            android:text="Size: 3,4MB, 2300x4000"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>